<div class="container">
  <h1>Snacks Index Page</h1>
  <a href="/snacks/new">Add a Snack to the Tray</a>
  <hr>
  {{#each snacks}}
    <div class="row">
      <div class="col-md-2">
        <div class="col-md-2">
          <img src="{{ this.image_url }}"
            alt="{{ this.name }}"
            class="poster">
        </div>
      <div class="col-md-6">
        <h2>
          <a href="/snacks/ {{this.id}}"> {{ this.name}} </a>
        </h2>
        <p>Review: {{this.review_description}} </p>
        <p>Rating: {{this.rating}} </p>
        <p>
          <form action="/snacks/{{ this.id }}?_method=DELETE" method="POST">
            <input
              class="btn btn-sm btn-danger"
              type="submit"
              name="delete"
              value="Delete Snack">
          </form>
        </p>
      </div>
    </div>
    {{/each}}
  </div>
